<div class="row">
  <%- model_class = Event -%>
  <div class="span12 page-header">
    <h3 style=""><%= Venue.find(@event.venue_id).name %> (<%= @event.year %>)</h3>
  </div>

  <div class="span12">
    <%- model_class = Volume -%>
    <h4 style="text-align:center">Table of contents</h4>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Anthology</th>
          <th>Volume</th>
          <th>Papers</th>
        </tr>
      </thead>
      <tbody>
        <% @volumes.each do |volume| %>
          <tr>
            <td><%= volume.anthology_id %></td>
            <td><%= link_to volume.title, :anchor => volume.anthology_id %></td>
            <td><%= volume.papers.size %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% @volumes.each do |volume| %>
      <br><br>
      <h4><span id="<%= volume.anthology_id %>"> <%= volume.title %> </span></h4><br>
      <% volume.papers.each do |paper| %>
        <%= render "papers/paper", :paper => paper %>
      <% end %>
    <% end %>
    
  </div>
</div> 