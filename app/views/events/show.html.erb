<div class="row">
  <%- model_class = Event -%>
  <div class="span12 page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <div class="span12">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
      <dd><%= @event.year %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:venue_id) %>:</strong></dt>
      <dd><%= @event.venue_id %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:kind) %>:</strong></dt>
      <dd><%= @event.kind %>&nbsp;</dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  events_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_event_path(@event), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  event_path(@event),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  </div>

  <div class="span12">
    <%- model_class = Volume -%>
    <h3 style="text-align:center"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>

    <%= paginate @volumes %>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:anthology_id) %></th>
          <th><%= model_class.human_attribute_name(:title) %></th>
          <th><%= model_class.human_attribute_name(:month) %></th>
          <th><%= model_class.human_attribute_name(:year) %></th>
          <th><%= model_class.human_attribute_name(:address) %></th>
          <th><%= model_class.human_attribute_name(:url).upcase %></th>
          <th><%= model_class.human_attribute_name(:sig).upcase %></th>
          <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
        </tr>
      </thead>
      <tbody>
        <% @volumes.each do |volume| %>
          <tr>
            <td><%= volume.anthology_id %></td>
            <td><%= link_to volume.title, volume_path(volume) %></td>
            <td><%= volume.month %></td>
            <td><%= volume.year %></td>
            <td><%= volume.address %></td>
            <td><%= volume.url %></td>
            <td>
              <% volume.sigs.each do |sig| %>
                <%= link_to sig.sigid, sig_path(sig) %>&nbsp;
              <% end %>
            </td>
            <!-- <td>
              <%= link_to t('.view', :default => t("helpers.links.view")),
                              volume_path(volume), :class => 'btn btn-mini btn-primary' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_volume_path(volume), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          volume_path(volume),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td> -->
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div> 