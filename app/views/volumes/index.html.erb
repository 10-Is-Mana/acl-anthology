<%- model_class = Volume -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:volume_id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:month) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:publisher) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:bibtype) %></th>
      <th><%= model_class.human_attribute_name(:bibkey) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @volumes.each do |volume| %>
      <tr>
        <td><%= link_to volume.id, volume_path(volume) %></td>
        <td><%= volume.volume_id %></td>
        <td><%= volume.title %></td>
        <td><%= volume.month %></td>
        <td><%= volume.year %></td>
        <td><%= volume.address %></td>
        <td><%= volume.publisher %></td>
        <td><%= volume.url %></td>
        <td><%= volume.bibtype %></td>
        <td><%= volume.bibkey %></td>
        <td><%=l volume.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_volume_path(volume), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      volume_path(volume),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_volume_path,
            :class => 'btn btn-primary' %>
