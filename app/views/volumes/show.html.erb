<div class="row">
  <%- model_class = Volume -%>
  <div class="span12 page-header">
    <h3><%= @volume.title %></h3>
  </div>
  <div class="span12">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:anthology_id) %>:</strong></dt>
      <dd><%= @volume.anthology_id %>&nbsp;</dd>
      <dt><strong>Editor(s):</strong></dt>
      <dd>
        <% first_editor = true %>
        <% @editors.each do |editor| %>
          <% if first_editor == true %>
            <%= link_to editor.full_name, person_path(editor) %>
            <% first_editor = false %>
          <% else %>
            | <%= link_to editor.full_name, person_path(editor) %>
          <% end %>
        <% end %>&nbsp;
      </dd>
      <dt><strong><%= model_class.human_attribute_name(:month) %>:</strong></dt>
      <dd><%= @volume.month %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
      <dd><%= @volume.year %>&nbsp;</dd>

      <dt><strong>Event(s):</strong></dt>
      <dd>
        <% first_event = true %>
        <% @events.each do |event| %>
          <% if first_event == true %>
            <%= link_to Venue.find(event.venue_id).acronym, event_path(event) %>
            <% first_event = false %>
          <% else %>
            | <%= link_to Venue.find(event.venue_id).acronym, event_path(event) %>
          <% end %>
        <% end %>&nbsp;
      </dd>

      <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
      <dd><%= @volume.address %>&nbsp;</dd>

      <dt><strong>SIG(s):</strong></dt>
      <dd>
        <% first_sig = true %>
        <% @sigs.each do |sig| %>
          <% if first_sig == true %>
            <%= link_to sig.sigid, sig_path(sig) %>
            <% first_sig = false %>
          <% else %>
            | <%= link_to sig.sigid, sig_path(sig) %>
          <% end %>
        <% end %>&nbsp;
      </dd>

      <dt><strong><%= model_class.human_attribute_name(:publisher) %>:</strong></dt>
      <dd><%= @volume.publisher %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
      <dd><%= link_to @volume.url, @volume.url, :target => "_blank" if @volume.url  %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:bibtype) %>:</strong></dt>
      <dd><%= @volume.bibtype %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:bibkey) %>:</strong></dt>
      <dd><%= @volume.bibkey %>&nbsp;</dd>
    </dl>
  </div>

  <!-- Volume controls -->
  <div class="form-actions span12">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                volumes_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_volume_path(@volume), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                volume_path(@volume),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>              

  <!-- Papers listing -->
  <div class="span12">
    <%- paper_class = Paper -%>

    <h3 style="text-align:center"><%=t '.title', :default => paper_class.model_name.human.pluralize.titleize %></h3>
    <!-- <paginate @papers %> -->
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= paper_class.human_attribute_name(:anthology_id) %></th>
          <th><%= paper_class.human_attribute_name(:title) %></th>
          <th><%= paper_class.human_attribute_name(:month) %></th>
          <th><%= paper_class.human_attribute_name(:year) %></th>
          <th><%= paper_class.human_attribute_name(:address) %></th>
          <th><%= paper_class.human_attribute_name(:url) %></th>
          <!-- <th><%= paper_class.human_attribute_name(:attachment) %></th> -->
          <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
        </tr>
      </thead>
      <tbody>
        <% @papers.each do |paper| %>
          <tr>
            <td><%= paper.anthology_id %></td>
            <td>
              <%= link_to paper.title, paper_path(paper) %>
              <% if paper.attach_type == "attachment" %>
                <%= image_tag "attachment.png", size: "16x16", alt: "Attachment" %>
              <% elsif paper.attach_type == "dataset" %>
                <%= image_tag "dataset.png", size: "16x16", alt: "Dataset" %>
              <% elsif paper.attach_type == "software" %>
                <%= image_tag "software.png", size: "16x16", alt: "Dataset" %>
              <% end %>
            </td>
            <td><%= paper.month %></td>
            <td><%= paper.year %></td>
            <td><%= paper.address %></td>
            <td><%= link_to paper.url, paper.url, :target => "_blank" if paper.url  %></td>
            <!-- <td>
              <%= link_to t('.view', :default => t("helpers.links.view")),
                              paper_path(paper), :class => 'btn btn-mini btn-primary' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_paper_path(paper), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          paper_path(paper),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td> -->
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_volume_paper_path(@volume),
                :class => 'btn btn-primary' %>
  </div>
</div>
