<div class="row">
  <div class="span12">
    <%- model_class = Person -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    </div>

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
      <dd><%= @person.person_id %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
      <dd><%= @person.first_name %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
      <dd><%= @person.last_name %>&nbsp;</dd>
      <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
      <dd><%= @person.full_name %>&nbsp;</dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  people_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_person_path(@person), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  person_path(@person),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  </div>

  <!-- Volumes information, shows only if it is available -->
  <% if @volumes.size > 0 %>
  <div class="span12">
    <%- volume_class = Volume -%>
    <h3 style="text-align:center"><%=t '.title', :default => volume_class.model_name.human.pluralize.titleize %></h3>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= volume_class.human_attribute_name(:anthology_id) %></th>
          <th><%= volume_class.human_attribute_name(:title) %></th>
          <th><%= volume_class.human_attribute_name(:month) %></th>
          <th><%= volume_class.human_attribute_name(:year) %></th>
          <th><%= volume_class.human_attribute_name(:address) %></th>
          <th><%= volume_class.human_attribute_name(:url) %></th>
          <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
        </tr>
      </thead>
      <tbody>
        <% @volumes.each do |volume| %>
          <tr>
            <td><%= volume.anthology_id %></td>
            <td><%= link_to volume.title, volume_path(volume) %></td>
            <td><%= volume.month %></td>
            <td><%= volume.year %></td>
            <td><%= volume.address %></td>
            <td><%= volume.url %></td>
            <!-- <td>
              <%= link_to t('.view', :default => t("helpers.links.view")),
                              volume_path(volume), :class => 'btn btn-mini btn-primary' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_volume_path(volume), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          volume_path(volume),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>

  <!-- Papers information, shows only if it is available -->
  <% if @papers.size > 0 %>
  <div class="span12">
    <%- paper_class = Paper -%>

    <h3 style="text-align:center"><%=t '.title', :default => paper_class.model_name.human.pluralize.titleize %></h3>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= paper_class.human_attribute_name(:anthology_id) %></th>
          <th><%= paper_class.human_attribute_name(:title) %></th>
          <th><%= paper_class.human_attribute_name(:month) %></th>
          <th><%= paper_class.human_attribute_name(:year) %></th>
          <th><%= paper_class.human_attribute_name(:address) %></th>
          <th><%= paper_class.human_attribute_name(:url) %></th>
          <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
        </tr>
      </thead>
      <tbody>
        <% @papers.each do |paper| %>
          <tr>
            <td><%= paper.anthology_id %></td>
            <td><%= link_to paper.title, paper_path(paper) %></td>
            <td><%= paper.month %></td>
            <td><%= paper.year %></td>
            <td><%= paper.address %></td>
            <td><%= paper.url %></td>
            <!-- <td>
              <%= link_to t('.view', :default => t("helpers.links.view")),
                              paper_path(paper), :class => 'btn btn-mini btn-primary' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_paper_path(paper), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          paper_path(paper),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>