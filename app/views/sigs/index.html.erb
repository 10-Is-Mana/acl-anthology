<%- model_class = Sig -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:sigid).upcase %></th>
      <th><%= model_class.human_attribute_name(:url).upcase %></th>
      <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
    </tr>
  </thead>
  <tbody>
    <% @sigs.each do |sig| %>
      <tr>
        <td><%= link_to sig.name, sig_path(sig) %></td>
        <td><%= sig.sigid %></td>
        <td><%= link_to sig.url, sig.url, :target => "_blank" if sig.url %></td>
        <!-- <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sig_path(sig), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sig_path(sig),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sig_path,
            :class => 'btn btn-primary' %>
